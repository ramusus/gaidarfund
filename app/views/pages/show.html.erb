<% content_for :title do %><%= @page.title.html_safe %><% end %>

<% content_for :extra_head do %>
    <script type="text/javascript">
        $(function() {
            $('ul.b-menu.b-last-textblock a.link[href="/<%= @page.slug %>/"]').addClass('selected');
        });
    </script>
<% end %>

<% content_for :content do %>
    <%= @page.content.html_safe %>
<% end %>