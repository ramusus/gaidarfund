                   <i class="b-corner b-corner-br">
                       <i class="main-brick"></i>
                       <i class="light-brick"></i>
                       <i class="different-brick"></i>
                   </i>
                </div>
           </a>
        <% elsif article.featured_block_type == 4 %>
           <a class="b-project-promo b-project-promo-cover c-<%= article.color_class %>-promo" href="<%= article_path(article) %>">
