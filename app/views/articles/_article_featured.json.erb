<% if article %>
    <div class="featured">
        <% if article.featured_block_type == 1 %>
            <a class="b-project-promo b-project-promo-clear c-<%= article.color_class %>-promo" href="<%= article_path(article) %>">
                <h3 class="title">
                    <% article.title.html_safe.split("\n").each do |line| %>
                        <span class="line">
                            <span class="shadow">
                                <span class="text"<%= article.background_color_style.html_safe %>><%= line.strip %></span>
                            </span>
                        </span>
                    <% end %>
                </h3>
                <div class="inner">
                   <p class="desc"><%= article.subtitle.html_safe %></p>
                   <i class="b-corner b-corner-br">
                       <i class="main-brick"></i>
                       <i class="light-brick"></i>
                       <i class="different-brick"></i>
                   </i>
                </div>
            </a>
        <% elsif article.featured_block_type == 2 %>
           <a class="b-project-promo c-<%= article.color_class %>-promo" href="<%= article_path(article) %>">
                <h3 class="title">
                    <% article.title.html_safe.split("\n").each do |line| %>
                        <span class="line">
                            <span class="shadow">
                                <span class="text"<%= article.background_color_style.html_safe %>><%= line.strip %></span>
                            </span>
                        </span>
                    <% end %>
                </h3>
                <div class="inner">
                   <%= image_tag(article.image(:featured_vertical), :class => 'image', :alt => article.title, :width => article.image.width(:featured_vertical), :height => article.image.height(:featured_vertical)) %>
                   <p class="desc"><%= article.subtitle.html_safe %></p>
                   <i class="b-corner b-corner-br">
                       <i class="main-brick"></i>
                       <i class="light-brick"></i>
                       <i class="different-brick"></i>
                   </i>
                </div>
           </a>
