<% if params[:page] == 1 %>
    <%= render :partial => 'article', :locals => {:article => @article_main, :featured => true} %>
<% end %>
<div class="b-tiles">
    <%= render :partial => 'article', :collection => @articles || 'No pubs.' %>
</div>
<% if params[:page] != @articles.total_pages %>
    <div class="b-more"><a class="link c-article-link" href="#">Ещё</a></div>
<% end %>