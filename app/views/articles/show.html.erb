<% content_for :title do %><%= @article.title.html_safe %><% end %>

<% content_for :body_class do %><% if @article.project %><%= 'l-%s-page c-gaidar-page' % [@article.project.subdomain] %><% else %>c-article-page<% end %><% end %>

<% content_for :extra_head do %>
    <script type="text/javascript">
        $(function() {
            $('li.item.<%= @menu_class %> a.link')
                .addClass('selected')
                .html(function(i, html) {
                    return html + ' <b class="b-graphics b-graphics-down-arrow"><b></b></b>';
                });
            $('.b-award-header p.label').remove();
        });
    </script>
<% end %>

<% content_for :left_column do %>
    <%= render :partial => 'projects' %>
    <%= render :partial => 'calendar' %>
    <%= render :partial => 'filters' %>
<% end %>

<% content_for :main_column do %>
    <div class="l-column-536 l-intercolumn-24<% if @article.project %> l-bg-column-40<% end %>">
        <% if @article.project %>
            <%= render :partial => 'project_header', :locals => {:project => @article.project} %>
            <div class="l-cover-fix">
                <div class="b-meta b-meta-pre">
                <div class="meta">
                    <%= render :partial => 'social_likes' %>
                </div>
                <div class="disqussion">
                    <a class="link" href="?">Обсуждение (37)</a>
                </div>
                </div>
        <% else %>
            <div class="b-share">
                <%= render :partial => 'social_likes' %>
            </div>
        <% end %>
        <h1><%= @article.title.html_safe %></h1>
        <div class="b-meta">
            <div class="meta">
                <span class="date"><%= l @article.published_at, :format => '%d %B %Y' %></span>
                <span class="b-square">■</span>
                <strong class="author">Яков Кельберт</strong>
            </div>
            <div class="disqussion">
                <a class="link" href="?">Обсуждение (37)</a>
            </div>
        </div>
        <p class="b-intro">
            <strong>Поздравляем победителей, одержавших победительную победу над побеждёнными и&nbsp;проигравшими. Поздравляем убедительных победителей, триумфально одержавших победительную победу над побеждёнными и&nbsp;проигравшими.</strong>
        </p>
        <%= @article.content.html_safe %>
        <div class="b-meta b-meta-separated">
            <div class="meta">
                <%= render :partial => 'social_likes' %>
            </div>
            <div class="disqussion">
                <a class="link" href="?">Обсуждение (37)</a>
            </div>
        </div>
        <div class="b-nearest-articles">
            <a class="link c-article-link" href="?nearest-1"><b class="b-graphics b-graphics-left-arrow"><b></b>
                </b>Пойман с&nbsp;поличным Квинтилий Вар</a>
            <a class="link next c-about-link" href="?nearest-2"><b class="b-graphics b-graphics-right-arrow"><b></b>
                </b>Румянцев побледнел но&nbsp;сдержался</a>
        </div>
        <% if @article.project %>
            </div>
        <% end %>
    </div>
    <div class="l-column-150<% if @article.project %> l-lift-452<% end %>">
        <h2 class="b-context-title">Ещё на эту тему</h2>
        <div class="l-shift-20">
            <ul class="b-context-links">
                <li class="item">
                    <a class="link" href="?see-also-1">Интервью с А. В. Суворовым</a>
                </li>
                <li class="item">
                    <a class="link" href="?see-also-2">Интервью с фельдмаршалом Румянцевым</a>
                </li>
                <li class="item">
                    <a class="link" href="?see-also-3">Интервью с Квинтилием Варом</a>
                </li>
                <li class="item">
                    <a class="link" href="?see-also-4">Жестокие слова в жестоком старом мире</a>
                </li>
                <li class="item">
                    <a class="link" href="?see-also-5">Предводитель галлов покаялся и ушел в пустыню</a>
                </li>
            </ul>
        </div>
    </div>
<% end %>

<%= render :template => 'layouts/application' %>