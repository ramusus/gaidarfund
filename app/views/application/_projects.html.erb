<h2 class="b-navigation-title"><% if defined?(:current) %>Другие проекты<% else %>Проекты<% end %><br/>Фонда</h2>
<div class="l-shift-20">
    <ul class="b-menu">
        <li class="item"><%= link_to 'О проектах Фонда', page_path('/about_projects/'), :class => 'link c-project-link' %></li>
        <% @projects.each do |project| %>
            <% if defined?(current) and current != project or not defined?(current) %>
                <li class="item"><%= link_to project, project_path(project), :class => 'link c-project-link' %></li>
            <% end %>
        <% end %>
        <li class="item"><%= link_to '<em>Все проекты</em>'.html_safe, projects_path(), :class => 'link c-project-link' %></li>
    </ul>
</div>