<% if article %>
    <div class="<% if defined?(featured) %>b-featured-article<% else %>b-article b-tiles-item<% if article.image.exists? %> b-article-illustrated<% end %><% end %>">
        <a class="link c-<%= article.color_class %>-link" href="<%= article_path(article) %>">
            <% if article.type %>
                <div class="b-section-label c-<%= article.color_class %>-block"><%= article.type.name %></div>
            <% end %>
            <% if article.image.exists? %>
                <div class="image-container">
                    <%= image_tag(article.image(:square), :class => 'image', :alt => article.title, :width => article.image.width(:square), :height => article.image.height(:square)) %>
                    <% if article.is_video? %><b class="b-icon b-icon-video"><b></b></b><% end %>
                </div>
            <% end %>
            <% if not defined?(featured) %>
                <div class="date"><%= l article.published_at, :format => '%d %B %Y' %></div>
            <% end %>
            <h3 class="title"><%= article.title.html_safe %></h3>
        </a>
        <p class="desc"><%= article.subtitle.html_safe %></p>
    </div>
<% end %>